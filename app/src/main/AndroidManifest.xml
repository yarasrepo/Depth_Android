<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:name=".MyApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="Virtual Cane"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VirtualCane3"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Virtual Cane"
            android:theme="@style/Theme.VirtualCane3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="android.speech.RecognitionService"
            android:permission="android.permission.BIND_RECOGNITION_SERVICE"/>

        <service
            android:name="android.speech.tts.TextToSpeechService"
            android:permission="android.permission.BIND_TEXT_SERVICE"/>

        <meta-data
            android:name="com.google.firebase.analytics.analytics_enabled"
            android:value="true"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDJuA4czc4ZF3Gr0ppLz4mmlMBc5qvHXGM"/>

    </application>


    <uses-feature android:name="android.hardware.microphone" android:required="false" />
</manifest>